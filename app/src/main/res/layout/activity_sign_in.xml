<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="SIGN IN"
        android:fontFamily="@font/happy_monkey"
        android:textColor="@color/babyblue"
        android:textSize="70sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email_signin"
        android:layout_width="335dp"
        android:layout_height="72dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="56dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:ems="10"
        android:layout_marginTop="300dp"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/pass_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/pass_signin"
        android:layout_width="335dp"
        android:layout_height="72dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="50dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:ems="10"
        android:layout_marginTop="400dp"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_signin" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="246dp"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="255dp"
        android:background="@color/teal_700"
        android:hint="Sign in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_signin" />


</RelativeLayout>